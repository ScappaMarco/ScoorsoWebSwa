{
    "$schema":"http://json-schema.org/draft/2019-09/schema",
    "$id":"https//swa.net/schemas/user",
    "type":"object",
    "properties": {
        "dataRichiesta": {
            "type":"string",
            "format":"date-time"
        },
        "localizzazione": {
            "type":"object",
            "properties": {
                "indirizzo": {
                    "type":"string"
                },
                "latitudine": {
                    "type":"string"
                },
                "longitudine": {
                    "type":"string"
                }
            },
            "required": ["indirizzo", "latitudine", "longitudine"],
            "additionalProperties":false
        },
        "descrizione": {
            "type":"string"
        }
    },
    "required": ["dataRichiesta", "localizzazione", "descrizione"],
    "additionalProperties":false
}