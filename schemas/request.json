{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://swa.net/schemas/request",
    "type": "object",
    "properties": {
        "id": {
            "type":"intteger",
            "minimum": 1
        },
        "description": {
            "type":"string"
        },
        "position": {
            "type": "object",
            "properties": {
                "address": {
                    "type":"string"
                },
                "coordinates": {
                    "type":"string"
                }
            }
        },
        "reporter": {
            "type":"object",
            "properties": {
                "name": {
                    "type":"string"
                },
                "email": {
                    "type":"string",
                    "format":"email"
                }
            }
        },
        "state": {
            "type":"string",
            "enum": [
                "in_attesa",
                "convalidata",
                "in_corso",
                "conclusa"
            ]
        },
        "mission": {
            "$ref":"/schemas/mission"
        }
    },
    "required": ["position", "reporter", "state", "mission"],
    "additionalProperties":false
}